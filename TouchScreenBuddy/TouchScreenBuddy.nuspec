<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2011/08/nuspec.xsd">
	<metadata>
		<id>TouchScreenBuddy</id>
		<version>2.0.1</version>
		<title>TouchScreenBuddy</title>
		<authors>dmanning23</authors>
		<owners>dmanning23</owners>
		<projectUrl>https://github.com/dmanning23/TouchScreenBuddy</projectUrl>
		<licenseUrl>https://github.com/dmanning23/TouchScreenBuddy/blob/master/LICENSE.txt</licenseUrl>
		<requireLicenseAcceptance>false</requireLicenseAcceptance>
		<description>Manage tap points on a touchscreen game in MonoGame</description>
		<releaseNotes />
		<copyright>Copyright 2016</copyright>
		<tags>android, ios, windows universal, monogame, xamarin</tags>
		<dependencies>

			<!--Xamarin.Android-->
			<group targetFramework="MonoAndroid10">
				<dependency id="MonoGame.Framework.Android" version="3.7"/>
				<dependency id="InputHelper" version="2.0"/>
				<dependency id="PrimitiveBuddy" version="2.0"/>
			</group>

			<!--Xamarin.iOS Unified-->
			<group targetFramework="Xamarin.iOS10">
				<dependency id="MonoGame.Framework.iOS" version="3.7"/>
				<dependency id="InputHelper" version="2.0"/>
				<dependency id="PrimitiveBuddy" version="2.0"/>
			</group>

			<!--Win Universal-->
			<group targetFramework="uap10.0">
				<dependency id="MonoGame.Framework.WindowsUniversal" version="3.7"/>
				<dependency id="Microsoft.NETCore.UniversalWindowsPlatform" version="6.1"/>
				<dependency id="InputHelper" version="2.0"/>
				<dependency id="PrimitiveBuddy" version="2.0"/>
			</group>

			<group targetFramework="net451">
				<dependency id="MonoGame.Framework.WindowsDX" version="3.7"/>
				<dependency id="InputHelper" version="2.0"/>
				<dependency id="PrimitiveBuddy" version="2.0"/>
			</group>

		</dependencies>
	</metadata>
	<files>

		<!--Xamarin.Android-->
		<file src="TouchScreenBuddy.Android\bin\Release\TouchScreenBuddy.Android.pdb" target="lib\MonoAndroid10\TouchScreenBuddy.Android.pdb" />
		<file src="TouchScreenBuddy.Android\bin\Release\TouchScreenBuddy.Android.dll" target="lib\MonoAndroid10\TouchScreenBuddy.Android.dll" />

		<!--Xamarin.iOS Unified-->
		<file src="TouchScreenBuddy.iOS\bin\Release\TouchScreenBuddy.iOS.pdb" target="lib\Xamarin.iOS10\TouchScreenBuddy.iOS.pdb" />
		<file src="TouchScreenBuddy.iOS\bin\Release\TouchScreenBuddy.iOS.dll" target="lib\Xamarin.iOS10\TouchScreenBuddy.iOS.dll" />

		<!--Windows Universal-->
		<file src="TouchScreenBuddy.WindowsUniversal\bin\Release\TouchScreenBuddy.WindowsUniversal.pdb" target="lib\uap10.0\TouchScreenBuddy.WindowsUniversal.pdb" />
		<file src="TouchScreenBuddy.WindowsUniversal\bin\Release\TouchScreenBuddy.WindowsUniversal.dll" target="lib\uap10.0\TouchScreenBuddy.WindowsUniversal.dll" />

		<!--WindowsDX-->
		<file src="TouchScreenBuddy.WindowsDX\bin\Release\TouchScreenBuddy.WindowsDX.pdb" target="lib\net451\TouchScreenBuddy.WindowsDX.pdb" />
		<file src="TouchScreenBuddy.WindowsDX\bin\Release\TouchScreenBuddy.WindowsDX.dll" target="lib\net451\TouchScreenBuddy.WindowsDX.dll" />

	</files>
</package>
